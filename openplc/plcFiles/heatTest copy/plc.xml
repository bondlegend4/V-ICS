    <pous>
      <pou name="thermal_control_ST" pouType="program">
        <interface>
          <localVars>
            <variable name="Temperature" address="%IW100">
              <type>
                <INT/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[Temperature input from Modbus (K × 100)]]></xhtml:p>
              </documentation>
            </variable>
          </localVars>
          <localVars>
            <variable name="HeaterFeedback" address="%IW101">
              <type>
                <INT/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[Heater state feedback: 0=OFF, 100=ON]]></xhtml:p>
              </documentation>
            </variable>
          </localVars>
          <localVars>
            <variable name="HeaterCommand" address="%QX0.0">
              <type>
                <BOOL/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[Output to control heater coil]]></xhtml:p>
              </documentation>
            </variable>
          </localVars>
          <localVars>
            <variable name="TempLow">
              <type>
                <INT/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[Low threshold: 291.15 K (18°C)]]></xhtml:p>
              </documentation>
            </variable>
            <variable name="TempHigh">
              <type>
                <INT/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[High threshold: 295.15 K (22°C)]]></xhtml:p>
              </documentation>
            </variable>
          </localVars>
        </interface>
        <body>
          <ST>
            <xhtml:p><![CDATA[TempLow := 29115;
TempHigh := 29515;

IF Temperature < TempLow THEN
    HeaterCommand := TRUE;
ELSIF Temperature > TempHigh THEN
    HeaterCommand := FALSE;
END_IF;]]></xhtml:p>
          </ST>
        </body>
      </pou>
      <pou name="heater_on_ST" pouType="program">
        <interface>
          <localVars>
            <variable name="HeaterCommand" address="%QX0.0">
              <type>
                <BOOL/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[Output to control heater]]></xhtml:p>
              </documentation>
            </variable>
          </localVars>
        </interface>
        <body>
          <ST>
            <xhtml:p><![CDATA[HeaterCommand := TRUE;]]></xhtml:p>
          </ST>
        </body>
      </pou>
      <pou name="read_temp_ST" pouType="program">
        <interface>
          <localVars>
