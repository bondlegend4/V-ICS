          </localVars>
          <localVars>
            <variable name="TempDisplayed">
              <type>
                <INT/>
              </type>
              <documentation>
                <xhtml:p><![CDATA[Copy for monitoring]]></xhtml:p>
              </documentation>
            </variable>
          </localVars>
        </interface>
        <body>
          <ST>
            <xhtml:p><![CDATA[TempDisplayed := Temperature;]]></xhtml:p>
          </ST>
        </body>
      </pou>
